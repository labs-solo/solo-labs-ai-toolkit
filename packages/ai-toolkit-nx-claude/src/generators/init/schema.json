{
  "$schema": "https://json-schema.org/schema",
  "$id": "Init",
  "title": "Initialize Solo Labs Claude Code configuration",
  "type": "object",
  "properties": {
    "installMode": {
      "type": "string",
      "description": "Installation mode (default=recommended, custom=choose components)",
      "enum": ["default", "custom"],
      "default": "default",
      "x-prompt": {
        "message": "üöÄ Installation Mode:\n  ‚Ä¢ Default: Quick setup with recommended Solo Labs agents and commands\n  ‚Ä¢ Custom: Choose specific components to install\n\nWhich installation mode?",
        "type": "list",
        "items": [
          {
            "value": "default",
            "label": "Default - Install recommended components (recommended)"
          },
          {
            "value": "custom",
            "label": "Custom - Choose specific components"
          }
        ]
      }
    },
    "installationType": {
      "type": "string",
      "description": "Installation type (global or local)",
      "enum": ["global", "local"],
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üìç Installation Location:\n  ‚Ä¢ Global: Available to Claude Code in ALL projects\n  ‚Ä¢ Local: Available only in this project\n\nWhere should components be installed?",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "global",
          "label": "Global (~/.claude) - Use anywhere"
        },
        {
          "value": "local",
          "label": "Local (./.claude) - This project only"
        }
      ]
    },
    "confirmLocalPath": {
      "type": "boolean",
      "description": "Confirm local installation path",
      "prompt-when": "installMode === 'custom' && installationType === 'local'"
    },
    "installCommands": {
      "type": "boolean",
      "description": "Whether to install commands",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "üìù Install slash commands?",
      "prompt-type": "confirm"
    },
    "commandSelectionMode": {
      "type": "string",
      "description": "Whether to install all commands or select specific ones",
      "enum": ["all", "specific"],
      "prompt-when": "installMode === 'custom' && installCommands === true",
      "prompt-message": "üìù Select commands to install:",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "all",
          "label": "All commands"
        },
        {
          "value": "specific",
          "label": "Select specific commands"
        }
      ]
    },
    "installAgents": {
      "type": "boolean",
      "description": "Whether to install agents",
      "default": true,
      "prompt-when": "installMode === 'custom'",
      "prompt-message": "ü§ñ Install AI agents?",
      "prompt-type": "confirm"
    },
    "agentSelectionMode": {
      "type": "string",
      "description": "Whether to install all agents or select specific ones",
      "enum": ["all", "specific"],
      "prompt-when": "installMode === 'custom' && installAgents === true",
      "prompt-message": "ü§ñ Select agents to install:",
      "prompt-type": "list",
      "prompt-items": [
        {
          "value": "all",
          "label": "All agents"
        },
        {
          "value": "specific",
          "label": "Select specific agents"
        }
      ]
    },
    "commands": {
      "type": "array",
      "description": "Specific commands to install",
      "items": {
        "type": "string"
      },
      "prompt-when": "installMode === 'custom' && installCommands === true && commandSelectionMode === 'specific'"
    },
    "agents": {
      "type": "array",
      "description": "Specific agents to install",
      "items": {
        "type": "string"
      },
      "prompt-when": "installMode === 'custom' && installAgents === true && agentSelectionMode === 'specific'"
    },
    "dry": {
      "type": "boolean",
      "description": "Preview installation without making changes",
      "default": false,
      "prompt-when": "installMode === 'custom'",
      "always-prompt": true,
      "prompt-message": "üëÅÔ∏è Run in dry-run mode (preview only)?",
      "prompt-type": "confirm"
    },
    "nonInteractive": {
      "type": "boolean",
      "description": "Run without prompts",
      "default": false
    },
    "force": {
      "type": "boolean",
      "description": "Overwrite existing files",
      "default": false
    }
  },
  "required": []
}
